page{height:100%;padding-bottom: 0;}
.search_container{width: 750rpx;height: 100%;overflow-x: hidden;position: relative;background: #f5f5f5;}
.search_input{width: 100%;height: 100rpx;background: #f5f5f5;position: absolute;top: 0;right: 0;z-index: 2;padding-bottom: 10rpx;box-sizing: border-box;}
.search_input input{width: 628rpx;height: 66rpx;box-sizing: border-box;display: block;margin:24rpx 30rpx 0rpx 20rpx;border-radius: 33rpx;background:#fff;color:#000;font-size: 26rpx;padding-left: 75rpx;}
.search_input .cancelbtn{font-size: 30rpx;line-height: 114rpx;color: #333333;position: absolute;right: 0;top: 0;padding: 0 20rpx;}
.search_icon{width: 34rpx;height: 34rpx;position: absolute;top: 40rpx;left: 48rpx;z-index: 4}
.hot_search{width: 750rpx;height: calc(100% - 100rpx);background: #fff;margin-top: 90rpx;box-sizing: border-box;padding: 0 32rpx;}
.search_result{padding-top: 114rpx}
.search_words{width: 100%;height: 70rpx;line-height: 70rpx;border-bottom: 1px solid #f5f5f5;background: #fff;color: #666;text-indent: 1em;}