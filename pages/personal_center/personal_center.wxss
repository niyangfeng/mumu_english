/**index.wxss**/
page{height: 100%}
.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: #f5f5f5;
  position: relative;
  /* padding-bottom: 400rpx; */
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}
.userinfo buttom {
  width: 200rpx;
  padding: 8px 24px;
  line-height: 1.41176471;
  border-radius: 4px;
  font-weight: 700;
  font-size: 17px;
  background: #37b5fc;
  color: #fff;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
}
.number_block{width: 660rpx;height: 150rpx;margin: 0 auto 80rpx;box-shadow: 0 0 15rpx #37b5fc;border-radius: 20rpx;display: flex;justify-content: space-around;background: #fff;}
.number_block view{width: 220rpx;height: 150rpx;padding: 20rpx 0;}
.number_block view text{width:100%;height: 55rpx;display: block;line-height: 55rpx;text-align: center;}
.invite{width: 100%;height: 100rpx;background: #fff;line-height: 100rpx;padding:0 30rpx;box-sizing: border-box;border-bottom: 1px solid #f5f5f5}
.invite image{width:60rpx;height:60rpx;float: right;margin-top: 20rpx;margin-right: -20rpx;}
.invite switch{float: right;margin-right: -20rpx;}
.invite text{float: right;margin-right: -20rpx;}
.modal_shadow{width: 100%;height: 100%;position: fixed;background: #f5f5f5;top: 0;}
.modal{width: 500rpx;height: 360rpx;position: absolute;top: 0;bottom: 0;left: 0;right: 0;margin: auto;background: #fff;padding: 20rpx;box-sizing: border-box;}
.modal view{width: 100%;height: 60rpx;text-align: center;line-height: 60rpx;font-size: 30rpx;color: #333;}
.modal .title{height: 80rpx;line-height: 80rpx;font-size: 36rpx;font-weight: bold;text-align: center;}
