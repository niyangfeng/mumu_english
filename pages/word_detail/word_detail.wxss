/* pages/word_detail/word_detail.wxss */
#music{width: 0;height: 0}
.word_container{width: 100%;height: auto;}
.word_container .word_mean{width: 100%;height: auto;padding: 30rpx 30rpx;box-sizing: border-box;border-bottom: 20rpx solid #f5f5f5;}
.word_container .word_mean_01{width: 100%;height: 150rpx;font-size: 80rpx;line-height: 120rpx;font-weight: bolder;padding: 30rpx 30rpx 0 30rpx;box-sizing: border-box;}

.word_container .word_mean .word_mean_02{width: 100%;height: 40rpx;margin-bottom: 30rpx;}
.word_container .word_mean .word_mean_02 text{width: auto;height: 40rpx;font-size: 32rpx;color: #333;display: inline-block;float: left;}
.word_container .word_mean .word_mean_02 image{width: 32rpx;height: 32rpx;display: inline-block;margin: 4rpx 30rpx 4rpx 20rpx;float: left;}
.word_container .word_mean .word_mean_03{width: 100%;height: auto;font-size: 32rpx;color: #333;line-height: 50rpx;}
.word_container .word_mean_precent{width: 100%;height:480rpx;padding: 30rpx 30rpx;box-sizing: border-box;border-bottom: 20rpx solid #f5f5f5;}
.word_container .word_mean_precent view{width: 100%;height: 100%;position: relative;}
.word_container .word_mean_precent text{color: #666}
#mychart-dom-pie {
	width: 100%;height: 380rpx;position: absolute;top: 0rpx;left:0;z-index: 10;
} 
.word_container .word_mean_example{width: 100%;height:auto;padding: 30rpx 30rpx 140rpx 30rpx;box-sizing: border-box;border-bottom: 20rpx solid #f5f5f5;}
.word_container .word_mean_example .text01{color: #666}
.word_container .word_mean_example .sentence_english,.word_container .word_mean_example .sentence_chinese{
  width: 100%;height: auto;color: #333;line-height: 48rpx;font-size: 30rpx;
}
.word_container .word_mean_example .sentence_english{margin-top: 20rpx;}
.word_container .btn_area{width: 100%;height: auto;background: #f5f5f5;position: fixed;bottom: 0;z-index: 2;box-sizing: border-box;padding: 16rpx 30rpx;}
.word_container .btn_area_shadow{width: 100%;height: 200rpx;background: #fff;box-sizing: border-box;padding: 30rpx 30rpx;}
.word_container .btn_area .btn_area_flex{ display: flex;justify-content: space-between;}
.word_container .btn_area .btn{width:180rpx;height: 80rpx;display: block;line-height: 80rpx;text-align: center;border-radius: 20rpx;color: #fff;font-size: 28rpx;}
.word_container .btn_area2{width: 100%;height: auto;background: #f5f5f5;position: fixed;bottom: 0;z-index: 2;box-sizing: border-box;padding: 30rpx 30rpx;}
.word_container .btn_area2 .btn_area_flex{ display: flex;justify-content: space-around;}
.word_container .btn_area2 .btn{width:240rpx;height: 80rpx;display: block;line-height: 80rpx;text-align: center;border-radius: 20rpx;color: #fff;font-size: 28rpx;}
.word_container .btn_area .progress{width: 500rpx;height: 10rpx;background: #fff;margin-top: 20rpx;position: relative;display: inline-block}
.word_container .btn_area .progress_now{height: 10rpx;background: #31b5fc;position: absolute;left: 0;top: 0;}
.word_container .btn_area .progress text{position: absolute;right: -150rpx;line-height: 10rpx;font-size: 20rpx;color:#666;}
.addword{position: absolute;right: 30rpx;top: 30rpx;color: #31b5fc;font-size: 30rpx;line-height: 50rpx}
.addword image{width: 35rpx;height: 35rpx;display: inline-block;float: left;margin-top: 9rpx;margin-right: 9rpx;}
.addword text{float:left;display: inline-block}
.word_shadow{position: fixed;width: 100%;height: calc(100vh - 380rpx);top: 180rpx;background: #dedede;color: #999;text-align: center;line-height: calc(100vh - 380rpx);z-index: 100;
}
.btn_area_x{padding-bottom: calc(16rpx + 34px)!important}
.word_shadow_x{height: calc(100vh - 380rpx - 34px)!important}